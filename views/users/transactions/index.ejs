<style>
    .table-transaction {
        background-color: rgba(255,255,255,0.6);
    }
    .table-transaction.table-bordered td, 
    .table-transaction.table-bordered th {
        border: 1px solid #2779a8;
        padding: 20px 10px;
        font-size: 14px;
    }
    .table-transaction.table-bordered td{
        word-break: break-all;
    }
    .table-transaction.table-bordered td a{
        color: #fff;
        text-decoration: underline;
        font-weight: 600;
    }
    .table-transaction.table-striped tbody tr:nth-of-type(odd) {
        background-color: rgb(112 157 180);
    }
    .table-transaction.table-striped tbody tr:nth-of-type(even) td a{
        color: #000;
        text-decoration: underline;
    }

     </style>
    
    <section class="inner-map-area fix market-sec-margin">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-10 m-auto">
                  <h2 class="blue-heading">Transaction List</h2>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-transaction">
                                <thead>
                                    <tr>
                                        <th width="15%">Image</th>
                                        <th width="20%">Amount</th>
                                        <th width="20%">Payment hash</th>
                                        <th width="30%">Address From</th>
                                        <th width="30%">Address To</th>
  
                                        <th width="15%">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(tx.length>0){
                                        tx.forEach(function(value,index){%>
                                    <tr>
                                        <td>
                                            <% if(value.imageinfo){%>
                                                <img  width="50" src="/uploadFile/<%=value.landInfo.image %>" alt="">

                                            <%}%>
                                           
                                        </td>
                                        <td><%=value.total %></td>
                                        <td>
                                            <a id="hash" href="https://bscscan.com/tx/<%=value.hash %>" target="_blank">
                                            <%=value.hash %>
                                          </a>
                                        </td>
                                        <td>
                                            <a href="https://bscscan.com/address/<%=value.wallet_address %>" target="_blank">
                                            <%=value.wallet_address %>
                                            </a>
                                        </td>

                                        <td>
                                            <a href="https://bscscan.com/address/<%=value.address_to %>" target="_blank">
                                            <%=value.address_to %>
                                            </a>
                                        </td>
                                        <td><span class="badge badge-warning">Success</span></td>
                                    </tr>
                                    <% }) }%>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
     